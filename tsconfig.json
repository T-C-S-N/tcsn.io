{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["../next-env.d.ts", "**/*.ts", "**/*.tsx", "../index.d.ts", "src/pages/api/auth/[...nextauth].ts", "src/pages/api/auth/[...nextauth].ts", "src/components/EmailTemplate.html"],
  "exclude": ["node_modules"]
}
